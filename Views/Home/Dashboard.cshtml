                        <div class="card-header">
                            <h2>Members</h2>
                            <hr />
                        </div>
                        <div class="card-body" style="overflow-y:auto;height:600px;background-color:antiquewhite">
                            @* Looop over Company members. Display Name and Role *@
                            @foreach (BTUser member in Model.Members!)
                            {
                                @if (await _rolesService.GetUserRolesAsync(member)! != null)
                                {
                                    <p>@member.FullName (@await _rolesService.GetUserRolesAsync(member))</p>
                                }
                                
