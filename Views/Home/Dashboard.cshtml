                            </table>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>
            </div>
            @* Tickets Table *@
            <div class="col">
                <div class="bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="card-header">
                            <h2>Tickets</h2>
                        </div>
                        <div class="card-body">

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Created
                                        </th>
                                        <th>
                                            Updated
                                        </th>
                                        <th>
                                            Archived
                                        </th>
                                        <th>
                                            ArchivedByProject
                                        </th>
                                        <th>
                                            Project
                                        </th>
                                        <th>
                                            TicketPriority
                                        </th>
                                        <th>
                                            TicketType
                                        </th>
                                        <th>
                                            TicketStatus
                                        </th>
                                        <th>
                                            DeveloperUser
                                        </th>
                                        <th>
                                            SubmitterUser
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Tickets!)
                                    {
                                        <tr>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                @item.Created
                                            </td>
                                            <td>
                                                @item.Updated
                                            </td>
                                            <td>
                                                @item.Archived
                                            </td>
                                            <td>
                                                @item.ArchivedByProject
                                            </td>
                                            <td>
                                                @item.Project!.Description
                                            </td>
                                            <td>
                                                @item.TicketPriority!.Name
                                            </td>
                                            <td>
                                                @item.TicketType!.Name
